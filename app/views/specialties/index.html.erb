<h1>Overview specialties</h1>
<table  id="specialties" class="display">
  <thead>
  <tr>
    <th>ID </th>
    <th>Shortcode</th>
    <th>Name</th>
    <% if current_user.admin? %>
    <th> </th>
    <th> </th>
    <th> </th>
    <% end %>
  </tr>
  </thead>
  <tbody>

  <% @specialties.each do |specialty| %>
      <tr>
        <td><%= specialty.id %></td>
        <td><%= specialty.shortcode %></td>
        <td><%= specialty.name %></td>
        <% if current_user.admin? %>
        <td><%= link_to 'Show', specialty %></td>
        <td><%= link_to 'Edit', edit_specialty_path(specialty) %></td>
        <td><%= link_to 'Delete', specialty, method: :delete, data: {confirm: 'Are you sure? Please confirm.'} %></td>
        <% end %>
      </tr>
  <% end %>
  </tbody>
</table>

<br/>
<% if current_user.admin? %>
<%= link_to 'Create a new specialty', new_specialty_path %><br>
<%= link_to 'Edit Operating Rooms', operating_rooms_path %><br>  <br>
<% end %>
<%= link_to 'Back to operating-room planning', operationsplan_start_path %>

